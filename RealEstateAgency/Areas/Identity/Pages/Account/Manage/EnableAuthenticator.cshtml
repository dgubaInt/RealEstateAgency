@page
@using Microsoft.AspNetCore.Mvc.Localization
@using RealEstateAgency.Core.Resources
@model EnableAuthenticatorModel
@{
    ViewData["Title"] = @UILabel.ConfigureAuthenticatorApp;
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div>
    <p>@UILabel.AuthenticatorAppSteps</p>
    <ol class="list">
        <li>
            <p>
                @UILabel.DownloadTwoFactorAuthenticator
                <a href="https://go.microsoft.com/fwlink/?Linkid=825072">@UILabel.Android</a> @UILabel.And
                <a href="https://go.microsoft.com/fwlink/?Linkid=825073">@UILabel.IOS</a> @UILabel.Or
                @UILabel.GoogleAuthenticator
                <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&amp;hl=en">@UILabel.Android</a> @UILabel.And
                <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8">@UILabel.IOS</a>.
            </p>
        </li>
        <li>
            <p>@UILabel.ScanDetails <kbd>@Model.SharedKey</kbd> @UILabel.TwoFactorAuthenticatorApp @UILabel.SpacesAndCasingDoNotMatter</p>
            <div class="alert alert-info">@UILabel.LearnHowTo <a href="https://go.microsoft.com/fwlink/?Linkid=852423">@UILabel.EnableQRCodeGeneration</a>.</div>
            <div id="qrCode"></div>
            <div id="qrCodeData" data-url="@Model.AuthenticatorUri"></div>
        </li>
        <li>
            <p>
                @UILabel.UniqueCode
                @UILabel.EnterTheCodeInTheConfirmationBox
            </p>
            <div class="row">
                <div class="col-md-6">
                    <form id="send-code" method="post">
                        <div class="form-floating">
                            <input asp-for="Input.Code" class="form-control" autocomplete="off" />
                            <label asp-for="Input.Code" class="control-label form-label">@UILabel.VerificationCode</label>
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">@UILabel.Verify</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>
                </div>
            </div>
        </li>
    </ol>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
