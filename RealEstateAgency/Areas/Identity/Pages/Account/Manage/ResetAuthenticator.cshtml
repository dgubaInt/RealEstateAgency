@page
@using Microsoft.AspNetCore.Mvc.Localization
@using RealEstateAgency.Core.Resources
@model ResetAuthenticatorModel
@{
    ViewData["Title"] = @UILabel.ResetAuthenticatorKey;
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@UILabel.AuthenticatorKey</strong>
    </p>
    <p>
        @UILabel.Disables2FA
        @UILabel.AutentificatorAppConfirmation
    </p>
</div>
<div>
    <form id="reset-authenticator-form" method="post">
        <button id="reset-authenticator-button" class="btn btn-danger" type="submit">@UILabel.ResetAuthenticatorKey</button>
    </form>
</div>
